@if (!string.IsNullOrEmpty(ViewBag.Erro))
{
    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div>@ViewBag.Erro</div>
    </div>
}
else
{
    <!-- Card com a tabela -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-light border-bottom-0 py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="card-title mb-0 text-secondary fw-semibold">
                    <i class="bi bi-list-ul me-2"></i>Lista de Vendedores
                </h6>
                <div class="d-flex gap-2 align-items-center">
                    <span class="badge bg-success-subtle text-success border border-success-subtle">
                        <i class="bi bi-circle-fill me-1" style="font-size: 8px;"></i>Ativo
                    </span>
                    <span class="badge bg-danger-subtle text-danger border border-danger-subtle">
                        <i class="bi bi-circle-fill me-1" style="font-size: 8px;"></i>Inativo
                    </span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-4 py-3 border-0">
                                    <i class="bi bi-person me-2 text-muted"></i>Nome do Vendedor
                                </th>
                                <th class="px-4 py-3 border-0 text-center">
                                    <i class="bi bi-activity me-2 text-muted"></i>Status
                                </th>
                                <th class="px-4 py-3 border-0 text-center">
                                    <i class="bi bi-gear me-2 text-muted"></i>Ações
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vendedor in Model)
                            {
                                <tr class="border-bottom border-light">
                                    <td class="px-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <div>
                                                <span class="fw-semibold text-dark">@vendedor.Nome</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-4 py-3 text-center">
                                        @if (vendedor.Ativo)
                                        {
                                            <span class="badge bg-success-subtle text-success border border-success-subtle px-3 py-2">
                                                <i class="bi bi-check-circle-fill me-2"></i>Ativo
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger-subtle text-danger border border-danger-subtle px-3 py-2">
                                                <i class="bi bi-x-circle-fill me-2"></i>Inativo
                                            </span>
                                        }
                                    </td>
                                    <td class="px-4 py-3 text-center">
                                        @if (vendedor.Ativo)
                                        {
                                            <button type="button" 
                                                    class="btn btn-outline-danger btn-sm" 
                                                    data-id="@vendedor.Id" 
                                                    onclick="inativarVendedor(this, event)"
                                                    title="Inativar vendedor">
                                                <i class="bi bi-person-dash me-1"></i>Inativar
                                            </button>
                                        }
                                        else
                                        {
                                            <button type="button" 
                                                    class="btn btn-outline-success btn-sm" 
                                                    data-id="@vendedor.Id" 
                                                    onclick="ativarVendedor(this, event)"
                                                    title="Ativar vendedor">
                                                <i class="bi bi-person-check me-1"></i>Ativar
                                            </button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="text-muted mb-3">
                        <i class="bi bi-people" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="text-muted mb-2">Nenhum vendedor encontrado</h5>
                    <p class="text-muted small mb-0">Ainda não há vendedores cadastrados no sistema.</p>
                </div>
            }
        </div>
    </div>
}

@section Scripts {
    <style>
        .avatar-circle {
            width: 40px;
            height: 40px;
            background: linear-gradient(135deg, #007bff, #0056b3);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 18px;
        }
        
        .card {
            transition: box-shadow 0.3s ease;
        }
        
        .card:hover {
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
        }
        
        .table tbody tr {
            transition: background-color 0.2s ease;
        }
        
        .table tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.05);
        }
        
        .btn {
            transition: all 0.2s ease;
        }
        
        .btn:hover {
            transform: translateY(-1px);
        }
        
        .modal-content {
            border-radius: 15px;
        }
        
        .badge {
            font-size: 0.8em;
            font-weight: 500;
        }
    </style>

    <script>
        let vendedorIdAtual = null;
        let nomeVendedorAtual = null;
        let acaoAtual = null; // 'inativar' ou 'ativar'
        
        const urlInativar = "@Url.Action("Inativar", "Vendedor")";
        const urlAtivar = "@Url.Action("Ativar", "Vendedor")";

        function inativarVendedor(element, event) {
            event.preventDefault();
            
            vendedorIdAtual = $(element).data('id');
            nomeVendedorAtual = $(element).closest('tr').find('span.fw-semibold').text();
            acaoAtual = 'inativar';
            
            configurarModal(
                'Inativar Vendedor',
                'Tem certeza que deseja inativar este vendedor?',
                'Ativo',
                'btn-danger',
                'Inativar'
            );
            
            const modal = new bootstrap.Modal(document.getElementById('modalConfirmarAtivarInativarVendedor'));
            modal.show();
        }

        function ativarVendedor(element, event) {
            event.preventDefault();
            
            vendedorIdAtual = $(element).data('id');
            nomeVendedorAtual = $(element).closest('tr').find('span.fw-semibold').text();
            acaoAtual = 'ativar';
            
            configurarModal(
                'Ativar Vendedor',
                'Tem certeza que deseja ativar este vendedor?',
                'Inativo',
                'btn-success',
                'Ativar'
            );
            
            const modal = new bootstrap.Modal(document.getElementById('modalConfirmarAtivarInativarVendedor'));
            modal.show();
        }

        function configurarModal(titulo, mensagem, statusAtual, classBotao, textoBotao) {
            $('#tituloConfirmacao').text(titulo);
            $('#mensagemConfirmacao').text(mensagem);
            $('#nomeVendedor').text(nomeVendedorAtual);
            $('#statusAtual').text(statusAtual);
            
            const btnConfirmar = $('#btnConfirmarAcao');
            btnConfirmar.removeClass('btn-primary btn-danger btn-success').addClass(classBotao);
            btnConfirmar.html(`<i class="bi bi-check-lg me-1"></i>${textoBotao}`);
            
            // Remover event listeners anteriores e adicionar o novo
            btnConfirmar.off('click').on('click', executarAcao);
        }

        function executarAcao() {
            if (!vendedorIdAtual || !acaoAtual) return;

            const url = acaoAtual === 'inativar' ? urlInativar : urlAtivar;
            const novoStatus = acaoAtual === 'inativar' ? 'Inativo' : 'Ativo';
            const mensagemSucesso = acaoAtual === 'inativar' 
                ? 'Vendedor inativado com sucesso!' 
                : 'Vendedor ativado com sucesso!';

            // Mostrar spinner e desabilitar botão
            $('#spinner').removeClass('d-none');
            $('#btnConfirmarAcao').prop('disabled', true);

            $.ajax({
                url: `${url}/${vendedorIdAtual}`,
                type: 'POST',
                headers: {
                    'RequestVerificationToken': $('input[name="__RequestVerificationToken"]').val()
                },
                success: function (response) {
                    $('#modalConfirmarAtivarInativarVendedor').modal('hide');
                    mostrarResultado(mensagemSucesso, novoStatus, true);
                },
                error: function (xhr, status, error) {
                    $('#modalConfirmarAtivarInativarVendedor').modal('hide');
                    const mensagemErro = xhr.responseJSON?.message || 
                        `Erro ao ${acaoAtual} vendedor. Tente novamente.`;
                    mostrarResultado(mensagemErro, null, false);
                },
                complete: function () {
                    $('#spinner').addClass('d-none');
                    $('#btnConfirmarAcao').prop('disabled', false);
                }
            });
        }

        function mostrarResultado(mensagem, novoStatus, sucesso) {
            const headerResultado = $('#headerResultado');
            const iconeResultado = $('#iconeResultado');
            const tituloResultado = $('#tituloResultado');
            const iconePrincipal = $('#iconePrincipal');
            const resultadoMensagem = $('#resultadoMensagem');
            const detalhesVendedor = $('#detalhesVendedor');
            const nomeVendedorResultado = $('#nomeVendedorResultado');
            const novoStatusSpan = $('#novoStatus');

            if (sucesso) {
                headerResultado.removeClass('bg-danger-subtle').addClass('bg-success-subtle');
                iconeResultado.html('<i class="bi bi-check-circle-fill text-success me-2"></i>');
                tituloResultado.text('Operação Realizada');
                iconePrincipal.html('<i class="bi bi-check-circle text-success" style="font-size: 3rem;"></i>');
                resultadoMensagem.html(`<h6 class="text-success mb-2">${mensagem}</h6>`);
                
                if (novoStatus) {
                    nomeVendedorResultado.text(nomeVendedorAtual);
                    novoStatusSpan.html(`<span class="badge ${novoStatus === 'Ativo' ? 'bg-success' : 'bg-danger'}">${novoStatus}</span>`);
                    detalhesVendedor.removeClass('d-none');
                }
            } else {
                headerResultado.removeClass('bg-success-subtle').addClass('bg-danger-subtle');
                iconeResultado.html('<i class="bi bi-x-circle-fill text-danger me-2"></i>');
                tituloResultado.text('Erro na Operação');
                iconePrincipal.html('<i class="bi bi-x-circle text-danger" style="font-size: 3rem;"></i>');
                resultadoMensagem.html(`<h6 class="text-danger mb-2">${mensagem}</h6>`);
                detalhesVendedor.addClass('d-none');
            }

            const modalResultado = new bootstrap.Modal(document.getElementById('modalResultadoAtivarInativarVendedor'));
            modalResultado.show();
        }

        // Limpar dados quando o modal for fechado
        $('#modalConfirmarAtivarInativarVendedor').on('hidden.bs.modal', function () {
            vendedorIdAtual = null;
            nomeVendedorAtual = null;
            acaoAtual = null;
        });
    </script>
}
