@using MBA.Marketplace.MVC.Extensions;
@using MBA.Marketplace.MVC.ViewModels;
@model List<VendedorViewModel>
@{
    ViewData["Title"] = "Listar Vendedores";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

