@using MBA.Marketplace.Business.Enums
@using System.Security.Claims
@RenderSection("Styles", required: false)
@{
    var isAdmin = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value == TipoUsuario.Administrador.ToString();
    var isVendedor = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value == TipoUsuario.Vendedor.ToString();
    var userTipo = TipoUsuario.Vendedor.ToString();
    if (isAdmin)
    { 
        userTipo = TipoUsuario.Administrador.ToString();
    }
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>
<body>
    <div class="admin-layout d-flex">
        <!-- Sidebar -->
        <nav class="admin-sidebar d-flex flex-column">
            <!-- Logo Section -->
            <div class="p-4 border-bottom">
                <div class="admin-logo">
                    <i class="bi bi-shop me-2"></i>
                    Marketplace
                </div>
            </div>

            <!-- Menu Section -->
            <div class="flex-grow-1 p-3">
                <!-- Dashboard -->
                <div class="admin-menu-section">
                    <div class="admin-menu-section-title">Dashboard</div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link admin-menu-item d-flex align-items-center px-3 py-2 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Admin" ? "active" : "")" 
                            href="@Url.Action("Index", "Admin")">
                                <i class="bi bi-speedometer2 admin-menu-icon"></i>
                                Dashboard
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Categorias -->
                <div class="admin-menu-section">
                    <div class="admin-menu-section-title">Categorias</div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link admin-menu-item d-flex align-items-center px-3 py-2 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Categoria" ? "active" : "")" 
                            href="@Url.Action("Index", "Categoria")">
                                <i class="bi bi-list-ul admin-menu-icon"></i>
                                Listar Categorias
                            </a>
                        </li>
                        @if (isAdmin)
                        {
                            <li class="nav-item">
                                <a class="nav-link admin-menu-item d-flex align-items-center px-3 py-2 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Criar" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Categoria" ? "active" : "")" 
                                href="@Url.Action("Criar", "Categoria")">
                                    <i class="bi bi-plus-circle admin-menu-icon"></i>
                                    Cadastrar Categoria
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Produtos -->
                <div class="admin-menu-section">
                    <div class="admin-menu-section-title">Produtos</div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link admin-menu-item d-flex align-items-center px-3 py-2 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Produto" ? "active" : "")" 
                            href="@Url.Action("Index", "Produto")">
                                <i class="bi bi-box-seam admin-menu-icon"></i>
                                Listar Produtos
                            </a>
                        </li>
                        @if (isVendedor)
                        { 
                            <li class="nav-item">
                                <a class="nav-link admin-menu-item d-flex align-items-center px-3 py-2 @(ViewContext.RouteData.Values["Action"]?.ToString() == "Criar" && ViewContext.RouteData.Values["Controller"]?.ToString() == "Produto" ? "active" : "")"
                                href="@Url.Action("Criar", "Produto")">
                                    <i class="bi bi-plus-circle admin-menu-icon"></i>
                                    Cadastrar Produto
                                </a>
                            </li>
                        }
                    </ul>
                </div>

                <!-- Configurações -->
                <div class="admin-menu-divider"></div>
                <div class="admin-menu-section">
                    <div class="admin-menu-section-title">Configurações</div>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link admin-menu-item d-flex align-items-center px-3 py-2 @(ViewContext.RouteData.Values["page"]?.ToString()?.Contains("Manage") == true ? "active" : "")" asp-area="Identity" asp-page="/Account/Manage/Index">
                                <i class="bi bi-person admin-menu-icon"></i>
                                Perfil
                            </a>
                        </li>
                        @if (isVendedor) 
                        { 
                            <li class="nav-item">
                                <a class="nav-link admin-menu-item d-flex align-items-center px-3 py-2" asp-area="Identity" asp-page="/Account/Manage/Email">
                                    <i class="bi bi-envelope admin-menu-icon"></i>
                                    Email
                                </a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link admin-menu-item d-flex align-items-center px-3 py-2" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">
                                <i class="bi bi-key admin-menu-icon"></i>
                                Senha
                            </a>
                        </li>
                        @*                      
                        <li class="nav-item">
                            <a class="nav-link admin-menu-item d-flex align-items-center px-3 py-2" asp-area="Identity" asp-page="/Account/Manage/TwoFactorAuthentication">
                                <i class="bi bi-shield-lock admin-menu-icon"></i>
                                Autenticação de Dois Fatores
                            </a>
                        </li> 
                        *@
                        <li class="nav-item">
                            <a class="nav-link admin-menu-item d-flex align-items-center px-3 py-2" asp-area="Identity" asp-page="/Account/Manage/PersonalData">
                                <i class="bi bi-file-earmark-text admin-menu-icon"></i>
                                Dados Pessoais
                            </a>
                        </li>
                    </ul>
                </div>

                <!-- Sair -->
                <div class="admin-menu-divider"></div>
                <div class="admin-menu-section">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                                <button type="submit" class="nav-link admin-menu-item d-flex align-items-center px-3 py-2 text-danger border-0 bg-transparent w-100">
                                    <i class="bi bi-box-arrow-right admin-menu-icon"></i>
                                    Sair
                                </button>
                            </form>
                        </li>
                    </ul>
                </div>

                <!-- Administração (Apenas para Administradores) -->
                @if (isAdmin)
                {
                    <div class="admin-menu-divider"></div>
                    <div class="admin-menu-section">
                        <div class="admin-menu-section-title">Administração</div>
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link admin-menu-item d-flex align-items-center px-3 py-2" href="#">
                                    <i class="bi bi-people admin-menu-icon"></i>
                                    Gerenciar Usuários
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link admin-menu-item d-flex align-items-center px-3 py-2" href="#">
                                    <i class="bi bi-gear admin-menu-icon"></i>
                                    Configurações do Sistema
                                </a>
                            </li>
                        </ul>
                    </div>
                }

                <!-- Vendedor (Apenas para Vendedores) -->
                @if (isVendedor)
                {
                    <div class="admin-menu-divider"></div>
                    <div class="admin-menu-section">
                        <div class="admin-menu-section-title">Vendedor</div>
                        <ul class="nav flex-column">
                            <li class="nav-item">
                                <a class="nav-link admin-menu-item d-flex align-items-center px-3 py-2" href="#">
                                    <i class="bi bi-graph-up admin-menu-icon"></i>
                                    Minhas Vendas
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link admin-menu-item d-flex align-items-center px-3 py-2" href="#">
                                    <i class="bi bi-cash-coin admin-menu-icon"></i>
                                    Relatórios
                                </a>
                            </li>
                        </ul>
                    </div>
                }
            </div>

            <!-- User Profile Section -->
            <div class="p-3 border-top">
                <div class="d-flex align-items-center">
                    <div class="admin-user-avatar me-3">
                        @(User.FindFirst(ClaimTypes.Name)?.Value?.Substring(0, 1).ToUpper() ?? "U")
                    </div>
                    <div class="flex-grow-1">
                        <div class="fw-bold text-dark">@(User.FindFirst(ClaimTypes.Name)?.Value ?? "Usuário")</div>
                        <small class="text-muted">@userTipo</small>
                    </div>
                </div>
            </div>
        </nav>

        <!-- Main Content Area -->
        <div class="flex-grow-1 d-flex flex-column">
            <!-- Top Bar -->
            <header class="admin-topbar d-flex align-items-center justify-content-between px-4">
                <div class="d-flex align-items-center">
                    <h4 class="mb-0 text-dark">@ViewData["Title"]</h4>
                </div>
                
                <div class="d-flex align-items-center">
                    <!-- User Info -->
                    <div class="d-flex align-items-center">
                        <div class="admin-user-avatar me-2">
                            @(User.FindFirst(ClaimTypes.Name)?.Value?.Substring(0, 1).ToUpper() ?? "U")
                        </div>
                        <span class="admin-user-info">@(User.FindFirst(ClaimTypes.Name)?.Value ?? "Usuário")</span>
                    </div>
                </div>
            </header>

            <!-- Content -->
            <main class="admin-content flex-grow-1">
                @RenderBody()
            </main>
        </div>
    </div>

    <partial name="_ModalLayout" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-maskmoney@3.0.2/dist/jquery.maskMoney.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
