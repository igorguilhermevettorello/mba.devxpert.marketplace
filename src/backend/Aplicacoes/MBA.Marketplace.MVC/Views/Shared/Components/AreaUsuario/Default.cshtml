@using MBA.Marketplace.Data.Context
@using Microsoft.AspNetCore.Identity
@model MBA.Marketplace.Business.DTOs.AreaUsuarioDto;
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject ApplicationDbContext context

@if (SignInManager.IsSignedIn(User))
{
    <ul class="navbar-nav d-flex align-items-center">
        <li class="nav-item d-flex align-items-center me-3">
            <a class="nav-link text-white d-flex align-items-center" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <i class="bi bi-person-circle fs-4 me-2"></i>
                <span>Olá! @Model.Nome</span>
            </a>
        </li>
        <li class="nav-item d-flex align-items-center">
            <form class="form-inline m-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-white border-0 d-flex align-items-center">
                    <i class="bi bi-box-arrow-right me-1"></i>
                    <span>Sair</span>
                </button>
            </form>
        </li>
    </ul>
}
else
{
    <ul class="navbar-nav d-flex align-items-center">
        <li class="nav-item d-flex align-items-center me-2">
            <a class="nav-link text-white d-flex align-items-center" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus me-1"></i>
                <span>Registrar</span>
            </a>
        </li>
        <li class="nav-item d-flex align-items-center">
            <a class="nav-link text-white d-flex align-items-center" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right me-1"></i>
                <span>Entrar</span>
            </a>
        </li>
    </ul>
}
