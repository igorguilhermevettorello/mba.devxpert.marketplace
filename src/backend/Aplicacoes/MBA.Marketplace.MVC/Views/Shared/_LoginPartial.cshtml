@using MBA.Marketplace.Data.Context
@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@inject ApplicationDbContext context

@{
    var userData = await UserManager.GetUserAsync(User);
    string displayName = userData?.UserName ?? "Usuário";
    
    if (userData != null)
    {
        try
        {
            // Buscar o vendedor pelo ID do usuário
            if (Guid.TryParse(userData.Id, out Guid userId))
            {
                var vendedor = await context.Vendedores.FindAsync(userId);
                if (vendedor != null && !string.IsNullOrEmpty(vendedor.Nome))
                {
                    displayName = vendedor.Nome;
                }
            }
        }
        catch
        {
            // Em caso de erro, manter o UserName como fallback
            displayName = userData.UserName ?? "Usuário";
        }
    }
}

<ul class="navbar-nav d-flex align-items-center">
    @if (SignInManager.IsSignedIn(User) && userData != null)
    {
        <li class="nav-item d-flex align-items-center me-3">
            <a id="manage" class="nav-link text-white d-flex align-items-center" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                <i class="bi bi-person-circle fs-4 me-2"></i> 
                <span>Olá! @displayName</span>
            </a>
        </li>
        <li class="nav-item d-flex align-items-center">
            <form id="logoutForm" class="form-inline m-0" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                <button id="logout" type="submit" class="nav-link btn btn-link text-white border-0 d-flex align-items-center">
                    <i class="bi bi-box-arrow-right me-1"></i>
                    <span>Sair</span>
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item d-flex align-items-center me-2">
            <a class="nav-link text-white d-flex align-items-center" id="register" asp-area="Identity" asp-page="/Account/Register">
                <i class="bi bi-person-plus me-1"></i>
                <span>Registrar</span>
            </a>
        </li>
        <li class="nav-item d-flex align-items-center">
            <a class="nav-link text-white d-flex align-items-center" id="login" asp-area="Identity" asp-page="/Account/Login">
                <i class="bi bi-box-arrow-in-right me-1"></i>
                <span>Entrar</span>
            </a>
        </li>
    }
</ul>
