@using MBA.Marketplace.MVC.Extensions;
@using MBA.Marketplace.MVC.ViewModels;
@model ProdutoViewModel
@{
    ViewData["Title"] = "Detalhes do Produto";
}

<div class="page-header">
    <div class="container">
        <h2><i class="bi bi-info-circle me-3"></i>Detalhes do Produto</h2>
        <p class="mb-0">Confira todas as informações sobre este produto</p>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <div class="col-lg-6 mb-4">
            <div class="product-image-container">
                <img src="/imagens/@Model.Src"
                     onerror="this.onerror=null; this.src='/images/foto-indisponivel.png';"
                     alt="@Model.Nome"
                     class="img-fluid rounded-3 shadow-lg product-image" />
            </div>
        </div>
        <div class="col-lg-6">
            <div class="product-details">
                <h2 class="product-title mb-3">@Model.Nome</h2>
                <p class="product-description mb-4">@Model.Descricao</p>

                <div class="product-info">
                    <div class="info-item mb-3">
                        <div class="price-display-large">
                            <i class="bi bi-currency-dollar me-2"></i>
                            @Model.Preco?.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("pt-BR"))
                        </div>
                    </div>

                    <div class="info-item mb-3">
                        <div class="info-label">
                            <i class="bi bi-box-seam me-2"></i>
                            <strong>Estoque:</strong>
                        </div>
                        <div class="info-value">
                            @Model.Estoque unidades disponíveis
                        </div>
                    </div>
                    
                    <div class="info-item mb-4">
                        <div class="info-label">
                            <i class="bi bi-tags me-2"></i>
                            <strong>Categoria:</strong>
                        </div>
                        <div class="info-value">
                            @Model.Categoria.Nome
                        </div>
                    </div>
                </div>

                <div class="product-actions">
                    <a href="@Url.Action("index", "home")" class="btn btn-outline-primary me-3">
                        <i class="bi bi-arrow-left me-2"></i> Voltar à listagem
                    </a>
                    <button class="btn btn-success" onclick="alert('Funcionalidade de compra em desenvolvimento!')">
                        <i class="bi bi-cart-plus me-2"></i> Adicionar ao Carrinho
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.product-image-container {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
    padding: 20px;
    border-radius: 20px;
    box-shadow: 0 10px 30px var(--shadow-medium);
}

.product-image {
    width: 100%;
    height: 400px;
    object-fit: cover;
    border-radius: 15px;
    transition: all 0.3s ease;
}

.product-image:hover {
    transform: scale(1.02);
}

.product-details {
    background: rgba(255, 255, 255, 0.9);
    padding: 2rem;
    border-radius: 20px;
    backdrop-filter: blur(10px);
    box-shadow: 0 8px 25px var(--shadow-light);
    border: 1px solid rgba(255, 255, 255, 0.2);
}

.product-title {
    color: var(--primary-color);
    font-weight: 700;
    font-size: 2rem;
    border-bottom: 3px solid var(--accent-color);
    padding-bottom: 0.5rem;
}

.product-description {
    color: var(--text-light);
    font-size: 1.1rem;
    line-height: 1.6;
}

.product-info {
    background: rgba(118, 75, 162, 0.05);
    padding: 1.5rem;
    border-radius: 15px;
    border-left: 4px solid var(--primary-color);
}

.info-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.5rem 0;
}

.info-label {
    color: var(--text-dark);
    font-weight: 600;
}

.info-value {
    color: var(--primary-color);
    font-weight: 500;
}

.price-display-large {
    background: linear-gradient(135deg, var(--primary-color) 0%, var(--accent-color) 100%);
    color: white;
    padding: 1rem 1.5rem;
    border-radius: 15px;
    font-weight: 700;
    font-size: 1.5rem;
    text-align: center;
    box-shadow: 0 6px 20px var(--shadow-medium);
    margin: 1rem 0;
}

.product-actions {
    margin-top: 2rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(118, 75, 162, 0.1);
}

.btn-outline-primary {
    border-color: var(--primary-color);
    color: var(--primary-color);
    border-radius: 12px;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn-outline-primary:hover {
    background: var(--primary-color);
    border-color: var(--primary-color);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px var(--shadow-medium);
}

@@media (max-width: 768px) {
    .product-details {
        padding: 1.5rem;
        margin-top: 1rem;
    }
    
    .product-title {
        font-size: 1.5rem;
    }
    
    .info-item {
        flex-direction: column;
        align-items: flex-start;
        gap: 0.5rem;
    }
}
</style>
