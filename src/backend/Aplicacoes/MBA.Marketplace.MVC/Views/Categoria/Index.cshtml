@using MBA.Marketplace.MVC.ViewModels;
@using MBA.Marketplace.Business.Enums
@model List<CategoriaViewModel>
@{
    ViewData["Title"] = "Listar Categorias";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.RegistroSucesso = TempData["RegistroSucesso"];

    var isAdmin = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value == TipoUsuario.Administrador.ToString();
    var isVendedor = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value == TipoUsuario.Vendedor.ToString();
}

@if (!string.IsNullOrEmpty(ViewBag.Erro))
{
    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div>@ViewBag.Erro</div>
    </div>
}
else
{
    <!-- Card com a tabela -->
    <div class="card shadow-sm border-0">
        <div class="card-header bg-light border-bottom-0 py-3">
            <div class="d-flex justify-content-between align-items-center">
                <h6 class="card-title mb-0 text-secondary fw-semibold">
                    <i class="bi bi-tags me-2"></i>Lista de Categorias
                </h6>
                @if (isAdmin)
                {
                    <div class="d-flex gap-2 align-items-center">
                        <span class="badge bg-info-subtle text-info border border-info-subtle">
                            <i class="bi bi-circle-fill me-1" style="font-size: 8px;"></i>Gerenciável
                        </span>
                    </div>
                }
            </div>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-3 py-3 border-0">
                                    <i class="bi bi-tag me-2 text-muted"></i>Nome
                                </th>
                                <th class="px-3 py-3 border-0">
                                    <i class="bi bi-text-paragraph me-2 text-muted"></i>Descrição
                                </th>
                                @if (isAdmin)
                                {
                                    <th class="px-3 py-3 border-0 text-center">
                                        <i class="bi bi-gear me-2 text-muted"></i>Ações
                                    </th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var categoria in Model)
                            {
                                <tr class="border-bottom border-light">
                                    <td class="px-3 py-3">
                                        <div>
                                            <span class="fw-semibold text-dark d-block">@categoria.Nome</span>
                                        </div>
                                    </td>
                                    <td class="px-3 py-3">
                                        <span class="text-muted">@categoria.Descricao</span>
                                    </td>
                                    @if (isAdmin)
                                    {
                                        <td class="px-3 py-3 text-center">
                                            <div class="btn-group" role="group">
                                                <a class="btn btn-outline-aplication btn-sm" title="Editar" href="@Url.Action("editar", "categoria", new { id = categoria.Id })" data-id="@categoria.Id">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <button onclick="deletarCategoria(this, event)" 
                                                        class="btn btn-outline-danger btn-sm btn-remover" 
                                                        title="Remover" 
                                                        data-id="@categoria.Id">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </div>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="text-muted mb-3">
                        <i class="bi bi-tags" style="font-size: 3rem;"></i>
                    </div>
                    <h5 class="text-muted mb-2">Nenhuma categoria encontrada</h5>
                    <p class="text-muted small mb-3">Ainda não há categorias cadastradas no sistema.</p>
                </div>
            }
        </div>
    </div>
}

@if (isAdmin)
{ 
    @section Scripts {
        <style>
            .card {
                transition: box-shadow 0.3s ease;
            }
            
            .card:hover {
                box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
            }
            
            .table tbody tr {
                transition: background-color 0.2s ease;
            }
            
            .table tbody tr:hover {
                background-color: rgba(0, 123, 255, 0.05);
            }
            
            .btn {
                transition: all 0.2s ease;
            }
            
            .btn:hover {
                transform: translateY(-1px);
            }
            
            .modal-content {
                border-radius: 15px;
            }
            
            .badge {
                font-size: 0.8em;
                font-weight: 500;
            }
        </style>

        @if (ViewBag.RegistroSucesso == true)
        {
            <script>
                var meuModal = new bootstrap.Modal(document.getElementById('modalSucessoEditarCategoria'));
                meuModal.show();
            </script>
        }

        <script>
            let categoriaId = null;
            let url = "@Url.Action("deletar", "categoria")";

            function deletarCategoria(element, event) {
                event.preventDefault();
                categoriaId = $(element).data('id');
                const modal = new bootstrap.Modal(document.getElementById('modalConfirmarRemoverCategoria'));
                modal.show();
            }

            function confirmacaoDeletarCategoria(element, event) {
                event.preventDefault();

                if (!categoriaId) return;

                $('#spinner').removeClass('d-none');
                $('#btnConfirmarRemocao').prop('disabled', true);

                $.ajax({
                    url: `${url}/${categoriaId}`,
                    type: 'DELETE',
                    contentType: 'application/json',
                    success: function () {
                        $('#modalConfirmar').modal('hide');
                        showResultado("Categoria removida com sucesso!", true);
                    },
                    error: function (err) {
                        let mensagem = err.responseText || "Erro ao remover categoria. Tente novamente.";
                        $('#modalConfirmar').modal('hide');
                        showResultado(mensagem, false);
                    },
                    complete: function () {
                        $('#spinner').addClass('d-none');
                        $('#btnConfirmarRemocao').prop('disabled', false);
                    }
                });
            };

            function showResultado(mensagem, sucesso) {
                if (sucesso) {
                $("#modalResultadoRemoverCategoria").find(".modal-header").html(`<h5 class="modal-title text-success fw-semibold">
                        <i class="bi bi-check-circle me-2"></i> Remoção da categoria
                    </h5>`);

                    $("#resultadoMensagem").html(mensagem);

                    $(".btn-modal-ajax").removeClass("btn-danger").addClass("btn-success");
                } else {
                $("#modalResultadoRemoverCategoria").find(".modal-header").html(`<h5 class="modal-title text-danger fw-semibold">
                        <i class="bi bi-x-circle me-2"></i> Falha ao remover a categoria
                    </h5>`);

                    $("#resultadoMensagem").html(mensagem);

                    $(".btn-modal-ajax").removeClass("btn-success").addClass("btn-danger")
                }

                const modalResultado = new bootstrap.Modal(document.getElementById('modalResultadoRemoverCategoria'));
                modalResultado.show();
            }
        </script>
    }
}