@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Alterar Senha";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            @if (!string.IsNullOrEmpty(Model.StatusMessage))
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle me-2"></i>
                    @Model.StatusMessage
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-shield-lock me-2"></i>Segurança da Conta
                            </h5>
                        </div>
                        <div class="card-body">
                            <form id="change-password-form" method="post">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="mb-3">
                                            <label asp-for="Input.OldPassword" class="form-label">
                                                <i class="bi bi-key me-2"></i>Senha Atual
                                            </label>
                                            <div class="input-group">
                                                <input asp-for="Input.OldPassword" class="form-control" placeholder="Digite sua senha atual" />
                                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('Input_OldPassword')">
                                                    <i class="bi bi-eye" id="Input_OldPassword-toggle-icon"></i>
                                                </button>
                                            </div>
                                            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="Input.NewPassword" class="form-label">
                                                <i class="bi bi-key-fill me-2"></i>Nova Senha
                                            </label>
                                            <div class="input-group">
                                                <input asp-for="Input.NewPassword" class="form-control" placeholder="Digite sua nova senha" />
                                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('Input_NewPassword')">
                                                    <i class="bi bi-eye" id="Input_NewPassword-toggle-icon"></i>
                                                </button>
                                            </div>
                                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                                            <div class="form-text">
                                                A senha deve ter pelo menos 6 caracteres.
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label asp-for="Input.ConfirmPassword" class="form-label">
                                                <i class="bi bi-check2-square me-2"></i>Confirmar Nova Senha
                                            </label>
                                            <div class="input-group">
                                                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirme sua nova senha" />
                                                <button class="btn btn-outline-secondary" type="button" onclick="togglePassword('Input_ConfirmPassword')">
                                                    <i class="bi bi-eye" id="Input_ConfirmPassword-toggle-icon"></i>
                                                </button>
                                            </div>
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-end mt-2">
                                    <button type="submit" class="btn btn-outline-aplication btn-sm">
                                        <i class="bi bi-save me-1"></i> Alterar Senha
                                    </button>
                                    <a asp-area="" asp-controller="Admin" asp-action="Index" class="btn btn-outline-danger btn-sm">Cancelar</a>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Security Tips -->
                    <div class="card mt-4">
                        <div class="card-body">
                            <h6 class="card-title text-info">
                                <i class="bi bi-lightbulb me-2"></i>Dicas de Segurança
                            </h6>
                            <ul class="mb-0">
                                <li>Use uma senha forte com pelo menos 8 caracteres</li>
                                <li>Combine letras maiúsculas, minúsculas, números e símbolos</li>
                                <li>Não reutilize senhas de outras contas</li>
                                <li>Altere sua senha regularmente</li>
                                <li>Não compartilhe sua senha com ninguém</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const icon = document.getElementById(inputId + '-toggle-icon');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            }
        }

        // Validação em tempo real da confirmação de senha
        document.getElementById('Input_ConfirmPassword').addEventListener('input', function() {
            const newPassword = document.getElementById('Input_NewPassword').value;
            const confirmPassword = this.value;
            
            if (confirmPassword && newPassword !== confirmPassword) {
                this.classList.add('is-invalid');
            } else {
                this.classList.remove('is-invalid');
            }
        });
    </script>
} 