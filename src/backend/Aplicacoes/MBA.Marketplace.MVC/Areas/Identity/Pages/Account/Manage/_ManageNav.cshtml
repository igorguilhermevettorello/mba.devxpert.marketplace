@{
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
}

<div class="card">
    <div class="card-body">
        <h6 class="card-title text-muted mb-3">
            <i class="bi bi-gear me-2"></i>Configurações da Conta
        </h6>
        <nav class="nav nav-pills flex-column">
            <a class="nav-link @(currentPage == "/Account/Manage/Index" ? "active" : "")" asp-area="Identity" asp-page="/Account/Manage/Index">
                <i class="bi bi-person me-2"></i>Perfil
            </a>
            <a class="nav-link @(currentPage == "/Account/Manage/Email" ? "active" : "")" asp-area="Identity" asp-page="/Account/Manage/Email">
                <i class="bi bi-envelope me-2"></i>Email
            </a>
            <a class="nav-link @(currentPage == "/Account/Manage/ChangePassword" ? "active" : "")" asp-area="Identity" asp-page="/Account/Manage/ChangePassword">
                <i class="bi bi-key me-2"></i>Alterar Senha
            </a>
            <a class="nav-link @(currentPage == "/Account/Manage/PersonalData" ? "active" : "")" asp-area="Identity" asp-page="/Account/Manage/PersonalData">
                <i class="bi bi-file-earmark-text me-2"></i>Dados Pessoais
            </a>
        </nav>
    </div>
</div> 