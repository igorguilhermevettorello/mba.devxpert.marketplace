@page
@model RegisterConfirmationModel
@{
    ViewBag.Title = "Confirmação de Registro";
    Layout = null; // Não usa layout para simplificar
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <title>Confirmação de Registro - Marketplace</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 1rem;
        }

        .confirmation-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 1.5rem;
            box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.2);
            overflow: hidden;
            max-width: 500px;
            width: 100%;
        }

        .confirmation-header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 2rem 1.5rem;
            text-align: center;
        }

        .confirmation-header i {
            font-size: 3rem;
            margin-bottom: 0.5rem;
            display: block;
        }

        .confirmation-header h4 {
            margin: 0;
            font-weight: 300;
            font-size: 1.25rem;
        }

        .confirmation-body {
            padding: 2rem 1.5rem;
        }

        .status-message {
            background: linear-gradient(135deg, #d4edda 0%, #c3e6cb 100%);
            border: 1px solid #c3e6cb;
            color: #155724;
            padding: 1.5rem;
            border-radius: 0.75rem;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .status-message i {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            display: block;
            color: #28a745;
        }

        .status-message h5 {
            margin-bottom: 0.5rem;
            font-weight: 600;
        }

        .description-text {
            color: #6c757d;
            font-size: 0.875rem;
            line-height: 1.6;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .btn-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 0.75rem;
            padding: 0.75rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 0.5rem 1rem rgba(102, 126, 234, 0.4);
        }

        .links-section {
            border-top: 1px solid #e9ecef;
            margin-top: 1.5rem;
            padding-top: 1.5rem;
        }

        .link-item {
            display: flex;
            align-items: center;
            padding: 0.5rem 0;
            text-decoration: none;
            color: #6c757d;
            transition: all 0.3s ease;
            border-radius: 0.5rem;
        }

        .link-item:hover {
            color: #667eea;
            background-color: rgba(102, 126, 234, 0.1);
            text-decoration: none;
        }

        .link-item i {
            margin-right: 0.5rem;
            font-size: 0.875rem;
        }

        .email-note {
            background: #fff3cd;
            border: 1px solid #ffeaa7;
            border-radius: 0.75rem;
            padding: 1rem;
            margin-bottom: 1.5rem;
            font-size: 0.875rem;
            color: #856404;
        }

        .email-note i {
            margin-right: 0.5rem;
            color: #f39c12;
        }

        .success-animation {
            animation: successPulse 2s ease-in-out;
        }

        @@keyframes successPulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
    </style>
</head>
<body>
    <div class="confirmation-container">
        <div class="confirmation-header">
            <i class="bi bi-envelope-check"></i>
            <h4>Confirmação de Registro</h4>
        </div>
        
        <div class="confirmation-body">
            <div class="status-message success-animation">
                <i class="bi bi-check-circle"></i>
                <h5>Registro Realizado com Sucesso!</h5>
                <p class="mb-0">Sua conta foi criada com sucesso. Agora você precisa confirmar seu email para ativar a conta.</p>
            </div>
            
            <p class="description-text">
                <strong>Próximos passos:</strong><br>
                Verifique sua caixa de entrada e clique no link de confirmação que enviamos para seu email.
                Se não encontrar o email, verifique também a pasta de spam.
            </p>

            @if (Model.DisplayConfirmAccountLink)
            {
                <div class="email-note">
                    <i class="bi bi-info-circle"></i>
                    <strong>Modo de Desenvolvimento:</strong> Como este é um ambiente de desenvolvimento, 
                    você pode clicar no link abaixo para confirmar sua conta diretamente.
                </div>
                
                <div class="d-grid mb-3">
                    <a id="confirm-link" href="@Model.EmailConfirmationUrl" class="btn btn-primary">
                        <i class="bi bi-envelope-check me-2"></i>Confirmar Conta
                    </a>
                </div>
            }
            else
            {
                <div class="email-note">
                    <i class="bi bi-envelope"></i>
                    <strong>Email Enviado!</strong> Verifique sua caixa de entrada para confirmar sua conta.
                </div>
            }

            <div class="d-grid mb-3">
                <a asp-page="./Login" class="btn btn-sm btn-primary">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Ir para o Login
                </a>
            </div>

            <div class="links-section">
                <a asp-page="./Register" class="link-item">
                    <i class="bi bi-person-plus"></i>
                    <span>Criar nova conta</span>
                </a>
                
                <a asp-page="./ResendEmailConfirmation" class="link-item">
                    <i class="bi bi-envelope"></i>
                    <span>Reenviar confirmação</span>
                </a>
                
                <a asp-page="./ForgotPassword" class="link-item">
                    <i class="bi bi-question-circle"></i>
                    <span>Esqueceu a senha?</span>
                </a>
                
                <a href="/" class="link-item">
                    <i class="bi bi-house"></i>
                    <span>Voltar para a Home</span>
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

